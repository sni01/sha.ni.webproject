<div id="user_reg">
		<h1>Create your own account</h1>
    {{#if logged_in }}
			<div id="user_reg_status_info">Please Log out Before create New User Account</div>	
		{{/if}}
		<form id="user_reg_form" {{#if logged_in }}hidden{{/if}}>
        <fieldset>
            <label for="user_name">Name:</label>
            <input type="text" id="user_reg_name" name="name" placeholder="Enter your full name" />
            <label for="user_email">Email:</label>
            <input type="email" id="user_reg_email" placeholder="Enter your email address" />
            <label for="password">Password:</label>
            <input type="password" id="user_reg_password" placeholder="Choose a password" />
            <label for="gender">Gender:</label>
            <select id="user_reg_gender">
                 <option value="male">Male</option>
                 <option value="female">Femal</option>
            </select>
            <input type="button" id="user_reg_submit" value="Create Account"/>
	</fieldset>
    </form>
</div>
